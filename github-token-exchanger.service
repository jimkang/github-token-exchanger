[Unit]
Description=github-token-exchanger
After=network.target
[Service]
ExecStart=/opt/github-token-exchanger/start-github-token-exchanger-server.js
Restart=always
User=bot
Group=bot
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/opt/github-token-exchanger
[Install]
WantedBy=multi-user.target
